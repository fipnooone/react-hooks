{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"jsx": "react",
		"lib": ["es6", "dom", "es2016", "es2017", "es2021"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": false,
		"moduleResolution": "Node",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		},
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
